<p id="notice"><%= notice %></p>

<h1>部活動一覧</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @club_names.each do |club_name| %>
      <tr>
        <td>
         <div class="row" style="text-align:center">
           <%= link_to(clubs_path(club_name: club_name.id)) do %>
             <div class="col-md-10 col-xs-offset-1 box"><%= club_name.name %></div>
           <% end %>
         </div>
       </td>
       <td><%= link_to '▷ 詳細を見る', club_name, class: 'btn btn-default'%></td>
       <td><%= link_to '▷ 編集する', edit_club_name_path(club_name), class: 'btn btn-default' %></td>
       <td><%= link_to '▷ 削除する', club_name, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '部活の追加', new_club_name_path, class: 'btn btn-default' %>

<br>
<br>
<%= link_to :back do %>
  <button>戻る</button>
<% end %>
