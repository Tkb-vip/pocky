<p id="notice"><%= notice %></p>

<h1>部活動一覧</h1>

<table>
  <thead>
    <tr>
      <th>部活名</th>
      <th>並び順</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @club_names.each do |club_name| %>
      <tr>
        <td><%= club_name.name %></td>
        <td><%= club_name.sort %></td>
        <td><%= link_to '詳細', club_name %></td>
        <td><%= link_to '編集', edit_club_name_path(club_name) %></td>
        <td><%= link_to '削除', club_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

